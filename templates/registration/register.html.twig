{# registration/register.html.twig #}

{% extends "base.html.twig" %}

{% block title %}{% trans %}Enregistrement{% endtrans %}{% endblock %}

    {% block form_header %}
        {% trans %}Formulaire d'inscription{% endtrans %}
    {% endblock %}
    {% block form_description %}
        {% trans %}Merci de renseigner les champs suivants afin de pouvoir vous enregistrer sur le site{% endtrans %}
    {% endblock %}
    {% block form_body %}
        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword) }}
            {{ form_row(registrationForm.agreeTerms) }}
    {% endblock %}
    {% block form_footer %}
            {{ form_row(registrationForm.submit) }}
        {{ form_end(registrationForm) }}
    {% endblock %}
